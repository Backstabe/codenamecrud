<div class="container">
  <div class="row bs-wizard" style="border-bottom:0;">
    <% if current_user %>
      <% current_user.lesson_users.each.with_index(1) do |lesson, index| %>
        <% if lesson.completed %>
          <% next_lesson = current_user.lesson_users.where(id: index+1, completed: true).first %>
          <div class="col-xs-1 bs-wizard-step complete">
            <div class="text-center bs-wizard-stepnum">Урок <%= lesson.lesson.id %></div>
            <div class="progress">
              <div class="progress-bar"></div>
            </div>
            <a>
              <%= link_to '', course_lesson_path(@course, lesson), class: 'bs-wizard-dot' %>
            </a>
            <div class="bs-wizard-info text-center"> <%= number_to_percentage(current_user.completed_lessons,  precision: 0) if !next_lesson %></div>
          </div>
        <% else %>
          <div class="col-xs-1 bs-wizard-step disabled"><!-- active -->
            <div class="text-center bs-wizard-stepnum">Урок <%= lesson.lesson.id %></div>
            <div class="progress">
              <div class="progress-bar"></div>
            </div>
            <a href="#" class="bs-wizard-dot"></a>
            <div class="bs-wizard-info text-center"> <%= %></div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
</div>